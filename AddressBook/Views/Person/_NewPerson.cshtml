@model AddressBook.Models.NewPersonModel
<div id="sidebar-header">
    <h1>New Person</h1>
    <button>x</button>
</div>
<div id="sidebar-content">
    @using (Ajax.BeginForm("CreateNewPerson", "Person", new AjaxOptions
    {
        OnSuccess = "OnSuccess",
        OnFailure = "OnFailure",
        LoadingElementId = "progress"
    }))
    {
        <h2>Personal details</h2>
        <div class="form-group row">
            @Html.LabelFor(model => model.Forename, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.Forename, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Forename)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Surname, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Surname)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.DateOfBirth, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", maxlength="10" })
                @Html.ValidationMessageFor(model => model.DateOfBirth)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Address, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>
        <hr />
        <h2>Profile Image</h2>
        <div class="form-group row">
            <div style="height:50px; width:50px; border-radius:50%; background:red;">

            </div>
            <div style="overflow:hidden; height:0; width:0">
                <input id="uploadImage" type="file" accept="image/*" name="image" />
            </div>
        </div>
        <hr />
        <h2>Social Details</h2>
        <div class="form-group row">
            @Html.LabelFor(model => model.FaceBookAccount, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.FaceBookAccount, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FaceBookAccount)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.TwitterAccount, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.TwitterAccount, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TwitterAccount)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Email, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" data-test-reference="create-new-person-btn">Create</button>
            </div>
        </div>

    }
</div>
